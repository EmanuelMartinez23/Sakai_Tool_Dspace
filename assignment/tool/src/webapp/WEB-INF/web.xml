<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_9" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>sakai-assignment-tool</display-name>
    <description>sakai-assignment-tool</description>

	<!-- Configure standard Spring application contexts. -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
      /WEB-INF/applicationContext.xml
    </param-value>
	</context-param>
  
	<!-- Sakai request filter -->
    <filter>
        <filter-name>sakai.request</filter-name>
        <filter-class>org.sakaiproject.util.RequestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>sakai.request</filter-name>
        <servlet-name>sakai.assignment</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>

    <filter-mapping>
        <filter-name>sakai.request</filter-name>
        <servlet-name>sakai.assignment.grades</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>

	<!-- the vm handling servlet : used direct by name, not by URL path -->
	<servlet>
		<servlet-name>
		   sakai.vm
		</servlet-name>
		<servlet-class>
			org.sakaiproject.vm.VelocityServlet
		</servlet-class>
		<init-param>
			<param-name> properties </param-name>
			<param-value> velocity.properties </param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

    <servlet>
        <servlet-name>
           sakai.assignment
        </servlet-name>
        <servlet-class>
            org.sakaiproject.assignment.tool.AssignmentAction
        </servlet-class>
        <init-param>
            <param-name>template</param-name>
            <param-value>assignment/chef_assignments</param-value>            
        </init-param>
        <load-on-startup>1</load-on-startup>
     </servlet>

     <servlet>
        <servlet-name>
            sakai.assignment.entityaccess
        </servlet-name>
        <servlet-class>
            org.sakaiproject.assignment.tool.RedirectingAssignmentEntityServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

	<servlet>
        <servlet-name>
           sakai.assignment.grades
        </servlet-name>
        <servlet-class>
            org.sakaiproject.assignment.tool.AssignmentAction
        </servlet-class>
        <init-param>
            <param-name>template</param-name>
            <param-value>assignment/chef_assignments</param-value>            
        </init-param>
        <load-on-startup>1</load-on-startup>
     </servlet>

     <!-- EPUB proxy servlet: same-origin streaming for external EPUBs -->
     <servlet>
        <servlet-name>sakai.assignment.epub.proxy</servlet-name>
        <servlet-class>org.sakaiproject.assignment.tool.epub.EpubProxyServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
     </servlet>
     <servlet-mapping>
        <servlet-name>sakai.assignment.epub.proxy</servlet-name>
        <url-pattern>/epub/proxy</url-pattern>
     </servlet-mapping>

     <!-- EPUB preview UI (Moodle-like) -->
     <servlet>
        <servlet-name>sakai.assignment.epub.preview</servlet-name>
        <servlet-class>org.sakaiproject.assignment.tool.epub.EpubPreviewServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
     </servlet>
     <servlet-mapping>
        <servlet-name>sakai.assignment.epub.preview</servlet-name>
        <url-pattern>/epub/preview</url-pattern>
     </servlet-mapping>

     <!-- EPUB internal file serving -->
     <servlet>
        <servlet-name>sakai.assignment.epub.serve</servlet-name>
        <servlet-class>org.sakaiproject.assignment.tool.epub.EpubServeServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
     </servlet>
     <servlet-mapping>
        <servlet-name>sakai.assignment.epub.serve</servlet-name>
        <url-pattern>/epub/serve</url-pattern>
     </servlet-mapping>

     <!-- Ensure Sakai RequestFilter applies to EPUB servlets -->
     <filter-mapping>
        <filter-name>sakai.request</filter-name>
        <servlet-name>sakai.assignment.epub.preview</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
     </filter-mapping>
     <filter-mapping>
        <filter-name>sakai.request</filter-name>
        <servlet-name>sakai.assignment.epub.serve</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
     </filter-mapping>
     <filter-mapping>
        <filter-name>sakai.request</filter-name>
        <servlet-name>sakai.assignment.epub.proxy</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
     </filter-mapping>
 
     <listener>
         <listener-class>org.sakaiproject.util.ToolListener</listener-class>
    </listener>
	<listener>
		<listener-class>org.sakaiproject.util.SakaiContextLoaderListener</listener-class>
	</listener>   
</web-app>
